<div class="container">
  <div class="row">
    <div class="col-md-4">
    	<h2>Send Reset Link</h2>
    	<% if flash[:alert] %>
  			<p class='text-danger'><%=h flash[:alert] %></p>
		<% end %>
      	<p>
			<%= form_tag password_resets_path, :method => :post do %>
          		<div class="input-group">
            		<%= label_tag :email %>
            		<%= text_field_tag :email, params[:email], :class => "form-control" %>
          		</div><br />
          		<%= submit_tag "Send Link", :class => "btn btn-large btn-primary" %>
			<% end %>
		</p>
	</div>
  </div>
</div>